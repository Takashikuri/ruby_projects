<div class="comments-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Comment</h1>
        <%= form_for @text do |f| %>
          <div class="form-group">
            <%= f.label :text %>
            <%= f.text_area :text, class: "form-control" %>
          </div>
          <% if logged_in? %>
          <%= f.hidden_field :topic_id, value: @text.topic_id %>
          <%= f.submit "送信", class: "btn-secondary" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

